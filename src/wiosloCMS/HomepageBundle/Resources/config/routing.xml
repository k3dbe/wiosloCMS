<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

	<route id="about_us" pattern="about_us">
		<default key="_controller">HomepageBundle:Body:aboutUs</default>
	</route>

	<route id="regulations" pattern="regulations">
		<default key="_controller">HomepageBundle:Body:regulations</default>
	</route>

	<route id="change_template" pattern="change_template">
		<default key="_controller">HomepageBundle:Body:changeTemplate</default>
	</route>

	<route id="homepage_photo" pattern="{id}">
		<default key="_controller">HomepageBundle:Body:show</default>
	</route>

	<route id="homepage" pattern="">
		<default key="_controller">HomepageBundle:Body:show</default>
	</route>
</routes>
