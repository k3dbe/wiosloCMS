<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

	<route id="photo_add" pattern="add">
		<default key="_controller">PhotoBundle:Photo:add</default>
	</route>

	<route id="photo_delete" pattern="delete/{id}">
		<default key="_controller">PhotoBundle:Photo:delete</default>
	</route>

	<route id="photo_next" pattern="next/{id}" methods="GET">
		<default key="_controller">PhotoBundle:Photo:next</default>
	</route>

	<route id="photo_previous" pattern="previous/{id}" methods="GET">
		<default key="_controller">PhotoBundle:Photo:previous</default>
	</route>

	<route id="photo_random" pattern="random" methods="GET">
		<default key="_controller">PhotoBundle:Photo:random</default>
	</route>

	<route id="photo_search" pattern="search" methods="GET">
		<default key="_controller">PhotoBundle:Photo:search</default>
	</route>

	<route id="photo_show" pattern="{id}" methods="GET">
		<default key="_controller">PhotoBundle:Photo:show</default>
	</route>

	<route id="rate" pattern="rate/{photoId}/{action}" methods="GET">
		<default key="_controller">PhotoBundle:Rating:rate</default>
	</route>

	<route id="comment_add" pattern="comment/add/{photoId}" methods="POST">
		<default key="_controller">PhotoBundle:PhotoComment:add</default>
	</route>

	<route id="crawler_kwejk" pattern="crawler/kwejk">
		<default key="_controller">PhotoBundle:Crawler:kwejk</default>
	</route>

	<route id="crawler_wiocha" pattern="crawler/wiocha">
		<default key="_controller">PhotoBundle:Crawler:wiocha</default>
	</route>

	<route id="crawler_hardcorowo" pattern="crawler/hardcorowo">
		<default key="_controller">PhotoBundle:Crawler:hardcorowo</default>
	</route>

</routes>
